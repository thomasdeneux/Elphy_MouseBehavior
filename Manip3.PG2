  ParamWin.updatevar;
  case N of
    // File actions
    101: LoadParameters('');
    102: SaveParameters(ParameterFile);
    103: SaveParameters('');
    104: SaveLocalParameters; // rewardConversion has changed
    // General parameters
    201: RunTheExp;
    203: OpenValve(rewardVolume);
